<!doctype html>
<html>
<head>
  <meta name="viewport" content="width=device-width">
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
  <title>Really Simple HTML Email Template</title>

  <link rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=Open+Sans:300,400,600">
  <link rel="stylesheet" type="text/css" href="../main.css" media="screen, projection">
</head>

<body>
  <!-- header -->
  <table class="header-wrap">
    <tr>
      <td></td>
      <td class="container">

        <!-- content -->
        <div class="content">
          <table>
            <tr>
              <td>
                {% include "header.nj" %}
              </td>
            </tr>
          </table>
        </div>
        <!-- /content -->

      </td>
      <td></td>
    </tr>
  </table>
  <!-- /header -->

  <!-- body -->
  <table class="body-wrap">
    <tr>
      <td></td>
      <td class="container">

        <!-- content -->
        <div class="content">
          <table>
            <tr>
              <td>
                {% block body %}{% endblock %}
              </td>
            </tr>
          </table>
        </div>
        <!-- /content -->

      </td>
      <td></td>
    </tr>
  </table>
  <!-- /body -->

  <!-- footer -->
  <table class="footer-wrap">
    <tr>
      <td></td>
      <td class="container">

        <!-- content -->
        <div class="content">
          <table>
            <tr>
              <td align="center">
                {% include "footer.nj" %}
              </td>
            </tr>
          </table>
        </div>
        <!-- /content -->

      </td>
      <td></td>
    </tr>
  </table>
  <!-- /footer -->

</body>
</html>